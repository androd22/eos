{% extends 'admin/base_admin.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>BatchNumber</th>
                <th>Weight</th>
                <th>InitialPrice</th>
                <th>FinalPrice</th>
                <th>Register</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.batchNumber }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.initialPrice }}</td>
                <td>{{ product.finalPrice }}</td>
                <td>{{ product.register ? product.register|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_product_new')}}">Create new</a>
{% endblock %}
