{% extends 'base.html.twig' %}

{% block title %}Auction{% endblock %}

{% block body %}
    <h1>Auction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auction.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ auction.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ auction.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ auction.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ auction.createdAt ? auction.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Started_at</th>
                <td>{{ auction.startedAt ? auction.startedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FinishedAt</th>
                <td>{{ auction.finishedAt ? auction.finishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ auction.image }}</td>
            </tr>
            <tr>
                <th>CelebrityName</th>
                <td>{{ auction.celebrityName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_auction') }}">back to list</a>

    <a href="{{ path('admin_auction', {'id': auction.id}) }}">edit</a>

