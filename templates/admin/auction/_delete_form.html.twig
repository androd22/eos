<form method="post" action="{{ path('admin_auction_delete', {'id': auction.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette enchère ?');"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auction.id) }}">
    <button type="submit"
            class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg transition-colors inline-flex items-center">
        <i class="fas fa-trash mr-2"></i>
        Supprimer l'enchère
    </button>
</form>