        <section class="py-24">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
            <span class="inline-block golden-gradient text-[#1D365B] text-sm font-medium px-6 py-2 rounded-full mb-4">
                Nos Ambassadeurs
            </span>
                    <h2 class="text-4xl font-bold mb-6 text-white">Célébrités Engagées</h2>
                    <p class="text-xl text-white opacity-90 max-w-2xl mx-auto">
                        Des personnalités de renom qui s'engagent à nos côtés pour changer des vies
                    </p>
                </div>

                <div class="swiper celebrity-swiper">
                    <div class="swiper-wrapper">
                        {% for celebrity in celebrities %}
                            <div class="swiper-slide px-2">
                                <div class="text-center group">
                                    <div class="relative w-40 h-40 mx-auto mb-4 rounded-full overflow-hidden hover-lift">
                                        <img src="{{ asset('uploads/celebrities/images/' ~ celebrity.image) }}"
                                             alt="{{ celebrity.imageAlt }}"
                                             class="w-full h-full object-cover">
                                        <div class="absolute inset-0 bg-gradient-to-b from-transparent to-[#1D365B] opacity-0 group-hover:opacity-100 transition-opacity">
                                            <div class="absolute bottom-4 left-0 right-0 text-center">
                                                <p class="golden-text text-sm">{{ celebrity.auctions|length }} enchère{{ celebrity.auctions|length > 1 ? 's' : '' }}</p>
                                            </div>
                                        </div>
                                    </div>
                                    <h3 class="text-white font-bold">{{ celebrity.stageName }}</h3>
                                    <p class="text-[#D4B054]">{{ celebrity.profession.name }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
