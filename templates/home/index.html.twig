        <!-- _current_auctions.html.twig -->
        <section class="py-24 royal-gradient">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
            <span class="inline-block golden-gradient text-[#1D365B] text-sm font-medium px-6 py-2 rounded-full mb-4">
                Enchères du moment
            </span>
                    <h2 class="text-4xl font-bold mb-6 text-white">Expériences Exclusives</h2>
                    <p class="text-xl text-white opacity-90 max-w-2xl mx-auto">
                        Découvrez nos enchères en cours et vivez des moments inoubliables avec vos célébrités préférées
                    </p>
                </div>

                <div class="grid md:grid-cols-3 gap-8">
                    {% set displayedAuctions = [] %}
                    {# D'abord on affiche les enchères actives #}
                    {% for auction in auctions %}
                        {% if auction.status == 'active' and displayedAuctions|length < 3 %}
                            {% set displayedAuctions = displayedAuctions|merge([auction]) %}
                            {# Template de la carte d'enchère #}
                            {% include 'auction/_auction_card.html.twig' with {'auction': auction} %}
                        {% endif %}
                    {% endfor %}

                    {# Ensuite on complète avec les enchères à venir si nécessaire #}
                    {% if displayedAuctions|length < 3 %}
                        {% for auction in auctions %}
                            {% if auction.status == 'upcoming' and displayedAuctions|length < 3 and auction not in displayedAuctions %}
                                {% set displayedAuctions = displayedAuctions|merge([auction]) %}
                                {% include 'auction/_auction_card.html.twig' with {'auction': auction} %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}

                    {# Si on n'a toujours pas 3 enchères, on affiche des cartes "prochainement" #}
                    {% if displayedAuctions|length < 3 %}
                        {% for i in 1..(3 - displayedAuctions|length) %}
                            <div class="white-card rounded-2xl overflow-hidden">
                                <div class="relative">
                                    <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                                        <span class="text-gray-400 text-xl">Prochainement</span>
                                    </div>
                                </div>
                                <div class="p-6">
                                    <h4 class="text-xl font-bold mb-3 text-[#1D365B]">Nouvelle enchère à venir</h4>
                                    <p class="text-[#234B6E] mb-6">Restez à l'écoute pour découvrir nos prochaines expériences exclusives.</p>
                                    <div class="flex justify-center items-center mb-6">
                                        <p class="text-[#234B6E]">À découvrir bientôt</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </section>
